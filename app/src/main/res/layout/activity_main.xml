<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ConnectActivity"
    android:background="#fcd039"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#302d26"
        android:layout_centerInParent="true">
    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:scale_base_width="1920"
        app:scale_base_height="1080"
        android:background="@drawable/main_background"
        >
        <ImageButton
            android:id="@+id/ib_groupwizard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_left="355"
            app:scale_top="431"
            app:scale_width="272"
            app:scale_height="269"
            android:background="@drawable/btn_groupwizard"
            />
        <ImageButton
            android:id="@+id/ib_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_left="701"
            app:scale_top="458"
            app:scale_width="217"
            app:scale_height="216"
            android:background="@drawable/btn_connect"
            android:layout_toRightOf="@id/ib_groupwizard"/>

        <ImageButton
            android:id="@+id/ib_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_left="1010"
            app:scale_top="458"
            app:scale_width="235"
            app:scale_height="217"
            android:background="@drawable/btn_guide"
            android:layout_toRightOf="@id/ib_connect"/>

        <ImageButton
            android:id="@+id/ib_fwupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_left="1322"
            app:scale_top="471"
            app:scale_width="210"
            app:scale_height="191"
            android:background="@drawable/btn_fwupdate"
            android:layout_toRightOf="@id/ib_guide"/>
    </com.ssomai.android.scalablelayout.ScalableLayout>
    </RelativeLayout>
</RelativeLayout>